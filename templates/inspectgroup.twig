
<html>	
<head>
  <meta charset="utf-8">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <title>{{ title }}</title>
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
   <link rel="stylesheet" href="phone.css" >	  

</head>

<body>

{{ include('header.twig') }}

<form name='inputform' action='inspectgroup.php?saveform' method='get'>
<input type='hidden' name='group_id' value='{{ var.group_id }}'/>
<div id='box'>	
	<div class='boxrow'>
		<div id='resp-table'>
			<div id='resp-table-body'>
				<div class='row' >
					<div class='cell'>
						{% if err %}
						{{ err }}
						{% elseif not var.group_id %}
						Group not found....<br>
						{% else %}
						<div id='resp-table'>
							<div id='resp-table-body'>
								
								<div class='row' >
									<div class='cellnarrow'>Faculty:</div><div class='cellnarrow'>{{ var.faculty_name }}</div>
								</div>
								<div class='row' >
									<div class='cellnarrow'>Group:</div><div class='cellnarrow'>{{ var.group_id }}</div>
								</div>
								<div class='row' >
									<div class='cellnarrow'>Inspector:</div><div class='cellnarrow'>{{ var.inspector }}</div>
								</div>
								<div class='row' >
									<div class='cellnarrow'>Date Inspected:</div><div class='cellnarrow'>{{ var.date }}</div>
								</div>
							</div>
						</div>
				   		{% endif %}
		   			</div>
		   		</div>
			</div>
		</div>
	</div>

	{% if questions %}
	<div class='boxrow'>
		<div id='resp-table'>
			<div id='resp-table-body' class='container'>
				<div class='row'><div class='cell'></div><div class='cell'></div>
					<div class='cell'>
						<div style='display:table; width:100%;'>
							<div style='display:table-row'>
								<div style='display:table-cell; width:30%;'><b>Yes</b></div>
								<div style='display:table-cell; width:30%;'><b>No</b></div>
								<div style='display:table-cell; width:30%;'><b>N/A</b></div>
							</div>
						</div>
					</div>
				</div>
				{% for question in questions %}
				<div class='row'>
					<div class='cell'>{{ question.number }}</div>
					<div class='cell'>{{ question.question }}</div>
					<div class='cell'>
						<div style='display:table; width:100%;'>
							<div style='display:table-row'>
								<div style='display:table-cell; width:30%; background-color: #efe;'><input type='radio' name='Q{{ question.number }}' value='yes'/></div>
								<div style='display:table-cell; width:30%; background-color: #fee;'><input type='radio' name='Q{{ question.number }}' value='no'/></div>
								<div style='display:table-cell; width:30%;'><input type='radio' name='Q{{ question.number }}' value='na'/></div>
							</div>
						</div>
					</div>	
				</div>
				{% endfor %}
			</div>
		</div>
	</div>
	<div class='boxrow'>
		<div id='resp-table'>
			<div id='resp-table-body' class='container'>
				<div class='row'>
					<div class='cellwide' >
					<b>Comments</b>
						<div class='cellwide' >
						
						<textarea name='comments' class='boxsizingBorder' rows='8'></textarea>
						
						</div>
					</div>
				</div>
			   <div class='row'>
			   		<div class='cellwide'>
			   		<b>Actions</b>
			   			<div class='cellwide'>
			   			<textarea name='actions' class='boxsizingBorder' rows='8'></textarea>
			   			</div>
			   		</div>
			   </div>
			   <div class='row'>
			   		<div class='cell'>
			   		<b>Compliant:</b> <input type='radio' name='decision' value='1'/> <b>Non-compliant:</b> <input type='radio' name='decision' value='0' checked='true'/>
			   		</div>
			   </div>
			   <div class='row'>
			   		<div class='cell padding' >
			   		<button type='submit'><b>Submit Form</b></button>
			   		</div>
			   	</div>
			   	<input type='hidden' name='status' value='save'/>	

			   		   
			</div>
		</div>
	</div>
	{% endif %}
	
</div>
</form>
</body>
</html>
